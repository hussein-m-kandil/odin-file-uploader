<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/meta', { title }) %>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
      <!-- prettier-ignore -->
      <% const isShareRoute = url.split('/').some((seg) => seg.toLowerCase() === 'share') %>
      <%- include('partials/alert') %>
      <nav aria-label="breadcrumb">
        <!-- prettier-ignore -->
        <% const trunc = (txt) => txt.length > 15 ? `${txt.slice(0, 12)}...` : txt %>
        <ol class="breadcrumb mb-1">
          <!-- prettier-ignore -->
          <% if (isShareRoute) { %>
          <% locals.parents?.forEach((p) => { if (p.isShared) { %>
          <li class="breadcrumb-item" aria-current="page" title="<%= p.name %>">
            <a class="text-decoration-none" href="/share/<%= p.id %>">
              <%= trunc(p.name) %>
            </a>
          </li>
          <% } }) %>
          <!-- prettier-ignore -->
          <% if (locals.file) { %>
          <li
            class="breadcrumb-item active"
            aria-current="page"
            title="<%= file.name %>"
          >
            <%= file.name %>
          </li>
          <% } %>
          <!-- prettier-ignore -->
          <% } else if (!locals.file) { %>
          <li class="breadcrumb-item active" aria-current="page">MyFiles</li>
          <% } else { %>
          <li class="breadcrumb-item" aria-current="page">
            <a class="text-decoration-none" href="/files">MyFiles</a>
          </li>
          <% locals.parents?.forEach((p) => { %>
          <li class="breadcrumb-item" aria-current="page" title="<%= p.name %>">
            <a class="text-decoration-none" href="/files/<%= p.id %>">
              <%= trunc(p.name) %>
            </a>
          </li>
          <% }) %>
          <li
            class="breadcrumb-item active"
            aria-current="page"
            title="<%= file.name %>"
          >
            <%= file.name %>
          </li>
          <% } %>
        </ol>
      </nav>
      <!-- prettier-ignore -->
      <% if (!isShareRoute && locals.file && file.isDir) { %>
      <!-- prettier-ignore -->
      <div class="text-secondary mb-3 d-flex flex-wrap gap-3 justify-content-between align-items-center" style="font-size: x-small;">
        <span>
          Created at
          <%= new Date(file.createdAt).toLocaleString(
            "hc",
            { hour12: true, hourCycle: "h12", timeStyle: "short", dateStyle: "medium" }
          ) %>
        </span>
        <% if (file.isShared) { %>
          <span class="ms-auto">
            <!-- Button trigger modal -->
            <button
              type="button"
              class="btn btn-sm btn-outline-success fw-bold"
              data-bs-toggle="modal"
              data-bs-target="#shareLinkModal"
              style="font-size: x-small"
            >
              Show Share Link
            </button>
            <a
              href="<%= `${baseUrl}/${file.id}/unshare` %>"
              role="button"
              class="btn btn-sm btn-outline-primary fw-bold ms-2"
              style="font-size: x-small"
            >
              Unshare Folder
            </a>
          </span>
        <% } else { %>
          <a
            href="<%= `${baseUrl}/${file.id}/share` %>"
            role="button"
            class="btn btn-sm btn-outline-primary fw-bold ms-auto"
            style="font-size: x-small"
          >
          Share Folder
        </a>
        <% } %>
      </div>
      <% } %>
      <!-- prettier-ignore -->
      <% if (Array.isArray(locals.files) && files.length > 0) { %>
      <!-- prettier-ignore -->
      <ul class="list-group">
        <%files.forEach((file) => { %>
          <li  class="list-group-item d-flex justify-content-between align-items-center fw-bold">
            <a href="<%= `/${isShareRoute ? 'share' : 'files'}/${file.id}` %>" class="text-decoration-none">
              <%= file.name %>
              <% if (!file.isDir) { %>
                <span class="badge text-bg-warning align-top text-primary" style="font-size: xx-small;">
                  File
                </span>
              <% } %>
            </a>
            <% if (!isShareRoute && locals.user && user.id === file.ownerId) { %>
              <span class="d-inline-flex flex-column flex-md-row flex-wrap justify-content-end gap-2">
                <a
                  href="<%= `${baseUrl}/${file.id}/rename` %>"
                  role="button" class="btn btn-sm btn-outline-primary fw-bold"
                  style="font-size: x-small;"
                >
                  Rename
                </a>
                <a
                  href="<%= `${baseUrl}/${file.id}/delete` %>"
                  role="button" class="btn btn-sm btn-outline-danger fw-bold"
                  style="font-size: x-small;"
                >
                  Delete
                </a>
              </span>
            <% } %>
          </li>
        <% }) %>
      </ul>
      <% } else if (locals.file && !file.isDir) { %>
      <h2 class="my-4 text-center"><%= file.name %></h2>
      <div class="my-5">
        <p class="d-flex flex-wrap justify-content-between border-bottom">
          <span class="fw-bold">Type</span>
          <span class="ms-auto"><%= file.metadata.mimetype %></span>
        </p>
        <p class="d-flex flex-wrap justify-content-between border-bottom">
          <span class="fw-bold">Size</span>
          <span class="ms-auto"><%= file.metadata.size %></span>
        </p>
        <p class="d-flex flex-wrap justify-content-between border-bottom">
          <span class="fw-bold">Uploaded</span>
          <!-- prettier-ignore -->
          <span class="ms-auto">
            <%= new Date(file.createdAt).toLocaleString(
              "hc",
              { hour12: true, hourCycle: "h12", timeStyle: "short", dateStyle: "medium" }
            ) %>
          </span>
        </p>
        <p class="d-flex flex-wrap justify-content-between border-bottom">
          <span class="fw-bold">Last Modified</span>
          <!-- prettier-ignore -->
          <span class="ms-auto">
            <%= new Date(file.updatedAt).toLocaleString(
              "hc",
              { hour12: true, hourCycle: "h12", timeStyle: "short", dateStyle: "medium" }
            ) %>
          </span>
        </p>
      </div>
      <!-- prettier-ignore -->
      <p class="d-flex flex-wrap gap-3 justify-content-evenly">
        <a href="<%= url %>/download" role="button" class="btn btn-outline-success fw-bold">
          Download
        </a>
        <% if (!isShareRoute && locals.user && user.id === file.ownerId) { %>
          <a href="<%= url %>/rename" role="button" class="btn btn-outline-primary fw-bold">
            Rename
          </a>
          <a href="<%= url %>/delete" role="button" class="btn btn-outline-danger fw-bold">
            Delete
          </a>
        <% } %>
      </p>
      <% } else { %>
      <p class="text-center text-body-secondary">
        There are no files or folders here! Consider
        <a class="link-offset-2" href="<%= url %>/create">creating a folder</a>
        or
        <a class="link-offset-2" href="<%= url %>/upload">uploading a file</a>.
      </p>
      <% } %>
    </div>
    <% if (!isShareRoute && locals.file && file.isDir && file.isShared) { %>
    <!-- Modal -->
    <div
      class="modal fade"
      id="shareLinkModal"
      tabindex="-1"
      aria-labelledby="shareLinkModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="shareLinkModalLabel">
              Folder Share Link
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="p-3 border rounded">
              <a
                id="share-link"
                href="<%= `/share/${file.id}` %>"
                style="font-size: small"
              >
                Visit shared version of this folder
              </a>
              <script>
                var shareLink = document.getElementById('share-link');
                if (shareLink) shareLink.textContent = shareLink.href;
                function handleError(error) {
                  console.log(error);
                  alert('Copy failed! You need to copy the link manually.');
                }
                function copyShareLink(btn) {
                  try {
                    navigator.clipboard
                      .writeText(shareLink.href)
                      .then(() => {
                        btn.disabled = true;
                        btn.className += ' disabled';
                      })
                      .catch(handleError);
                  } catch (error) {
                    handleError(error);
                  }
                }
              </script>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-sm btn-outline-secondary fw-bold"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button
              id="copy-btn"
              type="button"
              class="btn btn-sm btn-outline-success fw-bold"
              onclick="copyShareLink(this)"
            >
              Copy Share Link
            </button>
          </div>
        </div>
      </div>
    </div>
    <script>
      var shareLinkModal = document.getElementById('shareLinkModal');
      var copyBtn = document.getElementById('copy-btn');
      if (shareLinkModal && copyBtn) {
        shareLinkModal.addEventListener('hidden.bs.modal', () => {
          if (copyBtn.disabled) {
            copyBtn.disabled = false;
            copyBtn.className = copyBtn.className.replace(' disabled', '');
          }
        });
      }
    </script>
    <% } %>
  </body>
</html>
